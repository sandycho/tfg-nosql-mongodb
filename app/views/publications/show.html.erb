<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @publication.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @publication.text %>
</p>

<p>
  <strong>Interest lever:</strong>
  <%= @publication.interest_level %>
</p>

<%= link_to 'Edit', edit_publication_path(@publication) %> |
<%= link_to 'Back', publications_path %>

<h2>Comments</h2>
	<div id="comments">
  	<%= render partial: "comment", collection: @publication.comments %>
    <h1><%= @publication.comments.inspect %></h1>
    
	</div>

<%= form_for [@publication, Comment.new] do |f| %>
	<p>
    <%= f.label :text, "New comment" %><br/>
    <%= f.text_area :text %>
	</p>
<p><%= f.submit "Add comment" %></p>
<% end %>