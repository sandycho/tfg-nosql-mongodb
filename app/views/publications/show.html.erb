<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @publication.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @publication.text %>
</p>

<p>
  <strong>Interest lever:</strong>
  <%= @publication.interest_level %>
</p>

<%= link_to 'Edit', edit_publication_path(@publication) %> |
<%= link_to 'Back', publications_path %>

<h2>Comments</h2>
	<div id="comments">
  	<%= render partial: "comment", collection: @publication.comments %>
    <h1><%= @publication.comments %></h1>

    <% @publication.comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
	</div>

<%= form_for [@publication, Comment.new] do |f| %>
	<p>
    <%= f.label :text, "New comment" %><br/>
    <%= f.text_area :text %>
	</p>
<p><%= f.submit "Add comment" %></p>
<% end %>